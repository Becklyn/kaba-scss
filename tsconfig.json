{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": false,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "files": [
        "./src/index.ts"
    ],
    "include": [
        "**/*.tsx",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
